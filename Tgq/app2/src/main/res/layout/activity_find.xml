<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mt.mooc.com.demo.FindActivity">

    <LinearLayout
        android:id="@+id/find_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/find_news"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/view_gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8DDE1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/find_header"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_gray_line"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <LinearLayout
                android:id="@+id/find_main_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:id="@+id/find_main_tavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/find_main_travel"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅游热讯"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/find_main_square"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广场动态"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/find_main_hotwind"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热点地带"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/find_main_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/find_main_way"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="边走边买"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


            </LinearLayout>
            <View
                android:id="@+id/view_gray_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8DDE1"
                android:layout_marginTop="10dp"

                android:layout_below="@+id/find_main_channel"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></View>


            <LinearLayout
                android:id="@+id/find_channel_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_gray_line1"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/find_channel_parter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结伴而行\n一起才好玩"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/find_chnnel_me"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游励智囊\n教你玩世界"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/find_channel_online"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅游直播\n分享精彩游"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/find_big_gray"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F4F5F7"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/find_channel_second"
                ></View>
            <RelativeLayout
                android:id="@+id/find_all_pk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/find_big_gray">
                <LinearLayout
                    android:id="@+id/find_pk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅游PK"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/find_reflesh"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/find_pk_part2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/find_pk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/group_pk_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@mipmap/find_pk1"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />
                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="64"
                                android:max="100"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:progressDrawable="@drawable/find_pgb_left_layer"
                                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/hobby_red"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="喜欢TA"
                                        android:textColor="#F01414"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="51人喜欢"/>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="right"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@mipmap/find_pk2"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                />
                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="36"
                                android:max="100"
                                android:layout_marginRight="10dp"
                                android:progressDrawable="@drawable/find_pgb_right_layer"
                                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="喜欢TA"
                                        android:textColor="#0078B4"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="91人喜欢"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/hobby_blue"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_place_fss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="富士山"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/txt_place_intr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一座撒满糖霜的城市"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/txt_place_fss"
                        android:layout_alignLeft="@+id/txt_place_fss"
                        />
                    <TextView
                        android:id="@+id/txt_place_lmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="罗马角斗场"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/txt_place_lmj_intr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能给你历史和征服的力量"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/txt_place_lmj"
                        android:layout_alignRight="@+id/txt_place_lmj"
                        />
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/find_vs"
                        android:layout_centerInParent="true"

                        />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/find_big_gray2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F4F5F7"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/find_all_pk"
                ></View>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门头条"
                android:textSize="20sp"
                android:layout_below="@+id/find_big_gray2"
                android:gravity="center_horizontal"
                />
            <ListView
                android:id="@+id/lst_hot_infos"
                android:layout_below="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <TextView
                android:id="@+id/txt_load_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载更多"
                android:textColor="#399FD0"
                android:layout_below="@+id/lst_hot_infos"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
