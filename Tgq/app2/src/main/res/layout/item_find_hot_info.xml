<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_hot_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是信息"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_hot_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源：羊城晚报"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/find_hot_eye"/>

            <TextView
                android:id="@+id/txt_hot_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1002"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/find_hot_yes"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txt_hot_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/img_hot_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/find_hot_home"
        android:layout_marginLeft="20dp"/>

</LinearLayout>